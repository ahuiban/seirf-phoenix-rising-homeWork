<!DOCTYPE html>
<html>
  <head>
    <% include partials/head.ejs %>
  </head>
  <body style="text-align: center;">
    <!-- name -->
    <h1><%=data.name %></h1>
    <!-- image -->
    <img src="<%=data.img%>" style="max-width: 300px;">
    <ul>
      <!-- types -->
      <li><strong>type:</strong>
        <% data.type.forEach((type) => { %>
          <%= type %>
        <% }) %>
      </li>
      <!-- stats -->
      <% for(let stat in data.stats) { %>
        <li><strong><%=stat%>:</strong> <%=data.stats[stat]%></li>
      <% } %>
    </ul>
    <!-- delete -->
    <form action="/pokemon/<%=index%>?_method=DELETE" method="POST">
      <input type="submit" value="RELEASE THIS POKEMON">
    </form>
    <!-- edit -->
    <a href="/pokemon/<%=index%>/edit" class="button" style="margin-bottom: 15px">Edit This Pokemon</a>
    <br />
    <!-- etc. nav -->
    <p>
      <a href="/pokemon/new">Create a Pokemon</a> | <a href="/pokemon">Back to Pokedex</a>
    </p>
  </body>
</html>
